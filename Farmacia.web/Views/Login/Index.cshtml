@model Farmacia.web.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="correo"></label>
        <input asp-for="correo" class="form-control" />
        <span asp-validation-for="correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="contrasenia"></label>
        <input asp-for="contrasenia" class="form-control" type="password" />
        <span asp-validation-for="contrasenia" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
}
